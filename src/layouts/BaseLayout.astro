---
interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'Kristian Kim',
  description = 'Product designer crafting intuitive and user-centered experiences.',
} = Astro.props;

const fullTitle = title === 'Kristian Kim' ? title : `Kristian Kim â€” ${title}`;
---

<!doctype html>
<html lang="en" data-theme="light">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <title>{fullTitle}</title>
  </head>
  <body>
    <header class="site-header">
      <a class="brand" href="/">Kristian Kim</a>
      <div class="header-actions">
        <nav>
          <a href="/works">Works</a>
          <a href="/thoughts">Thoughts</a>
          <a href="/about">About</a>
        </nav>
        <button id="theme-toggle" aria-label="Toggle dark mode" type="button">Dark</button>
      </div>
    </header>

    <main>
      <slot />
    </main>

    <script is:inline>
      const key = 'kristiankim-theme';
      const root = document.documentElement;
      const button = document.getElementById('theme-toggle');

      const applyTheme = (theme) => {
        root.setAttribute('data-theme', theme);
        if (button) button.textContent = theme === 'dark' ? 'Light' : 'Dark';
      };

      const stored = localStorage.getItem(key);
      applyTheme(stored === 'dark' ? 'dark' : 'light');

      button?.addEventListener('click', () => {
        const current = root.getAttribute('data-theme') === 'dark' ? 'dark' : 'light';
        const next = current === 'dark' ? 'light' : 'dark';
        localStorage.setItem(key, next);
        applyTheme(next);
      });
    </script>
  </body>
</html>

<style>
  :root {
    --max: 1080px;
    --ease: 220ms ease;
  }

  html[data-theme='light'] {
    color-scheme: light;
    --bg: #f7f7f7;
    --surface: #ffffff;
    --text: #171717;
    --muted: #626262;
    --line: #e8e8e8;
    --chip: #f0f0f0;
  }

  html[data-theme='dark'] {
    color-scheme: dark;
    --bg: #0f0f0f;
    --surface: #171717;
    --text: #f3f3f3;
    --muted: #9c9c9c;
    --line: #2a2a2a;
    --chip: #222;
  }

  * {
    box-sizing: border-box;
  }

  body {
    margin: 0;
    background: var(--bg);
    color: var(--text);
    font-family: Inter, "Avenir Next", "Helvetica Neue", sans-serif;
    line-height: 1.5;
    transition: background var(--ease), color var(--ease);
  }

  main {
    max-width: var(--max);
    margin: 0 auto;
    padding: 2.5rem 1.25rem 5rem;
  }

  .site-header {
    max-width: var(--max);
    margin: 0 auto;
    padding: 1.1rem 1.25rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1px solid var(--line);
  }

  .brand {
    color: var(--text);
    text-decoration: none;
    font-weight: 700;
    letter-spacing: -0.01em;
  }

  .header-actions {
    display: flex;
    align-items: center;
    gap: 0.8rem;
  }

  nav {
    display: flex;
    gap: 0.3rem;
    align-items: center;
  }

  nav a {
    color: var(--muted);
    text-decoration: none;
    font-size: 0.92rem;
    padding: 0.38rem 0.62rem;
    border-radius: 999px;
  }

  nav a:hover {
    color: var(--text);
    background: var(--chip);
  }

  #theme-toggle {
    border: 1px solid var(--line);
    background: var(--surface);
    color: var(--text);
    border-radius: 999px;
    padding: 0.38rem 0.66rem;
    cursor: pointer;
    font-size: 0.78rem;
    line-height: 1;
  }
</style>
