---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { thoughts } from '../../data/content';
---
<BaseLayout title="Thoughts">
  <h1>Thoughts</h1>
  <ul class="list">
    {thoughts.map((post) => (
      <li>
        <a href={`/thoughts/${post.slug}`}>{post.title}</a>
        <span>{post.publishedAt}</span>
      </li>
    ))}
  </ul>
</BaseLayout>

<style>
.list{list-style:none;padding:0;display:grid;gap:1rem}li{display:flex;justify-content:space-between;gap:1rem;border-bottom:1px solid var(--line);padding:.75rem 0}span{color:var(--muted);font-size:.9rem}a{color:var(--text);text-decoration:none}
</style>
