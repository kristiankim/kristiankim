---
import BaseLayout from '../layouts/BaseLayout.astro';
import { home } from '../data/content';
---

<BaseLayout>
  <section class="hero">
    <h1>{home.intro}</h1>
    <p class="lead">{home.body}</p>
  </section>
</BaseLayout>

<style>
  .hero {
    max-width: 900px;
    padding-top: 2.2rem;
  }

  h1 {
    margin: 0 0 1rem;
    font-size: clamp(2.1rem, 6vw, 4.5rem);
    line-height: 1.02;
    letter-spacing: -0.032em;
    font-weight: 600;
  }

  .lead {
    margin: 0;
    max-width: 70ch;
    color: var(--muted);
    font-size: clamp(1rem, 1.8vw, 1.18rem);
  }
</style>
