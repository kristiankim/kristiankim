---
import BaseLayout from '../layouts/BaseLayout.astro';
import { home } from '../data/content';
---
<BaseLayout>
  <section class="hero">
    <h1>{home.intro}</h1>
    <p>{home.body}</p>
  </section>
</BaseLayout>

<style>
.hero{max-width:820px;padding-top:2rem}h1{font-size:clamp(2rem,5vw,4rem);line-height:1.08;letter-spacing:-.02em;margin:0 0 1rem}p{font-size:1.1rem;color:var(--muted);max-width:72ch}
</style>
